

<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme" tools:ignore="ResourceCycle">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/colorPrimary</item>
        <item name="actionMenuTextColor">#fff</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- just change the parent -->
    <style name="AppTheme.Dark" parent="AppTheme.Dark" tools:ignore="ResourceCycle">

        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="Widget.Mini_Projet.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="Widget.Mini_Projet.AppWidget.InnerView" parent="android:Widget">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
    <style name="color_med" parent="android:Widget">
        <item name="android:background">@color/black</item>
    </style>

    //Butoon
    <style name="button_style" >
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dp</item>
    </style>

    <!-- res/values/styles.xml -->
    <style name="OrangeProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@android:color/white</item>
    </style>
</resources>